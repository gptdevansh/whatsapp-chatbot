# ========================================
# WhatsApp AI Chatbot - Environment Configuration
# ========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to git!

# ========================================
# Application Settings
# ========================================
APP_NAME=WhatsApp Chatbot
DEBUG=False
LOG_LEVEL=INFO

# ========================================
# Database
# ========================================
DATABASE_URL=sqlite+aiosqlite:///./data/chatbot.db

# ========================================
# Security
# ========================================
# Generate SECRET_KEY with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-generate-a-secure-one
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================
# Admin Credentials
# ========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password

# ========================================
# Meta WhatsApp Business API
# ========================================
# Get these from: https://developers.facebook.com/apps/
# See META_SETUP.md for detailed instructions

# Phone Number ID from WhatsApp > API Setup
META_PHONE_NUMBER_ID=your_phone_number_id_here

# Access Token from WhatsApp > API Setup
META_ACCESS_TOKEN=your_meta_access_token_here

# Your custom verify token (choose any secure string)
META_VERIFY_TOKEN=your_custom_verify_token_12345

# Business Account ID (optional)
META_BUSINESS_ACCOUNT_ID=

# API Version (recommended: v24.0)
META_API_VERSION=v24.0

# ========================================
# AI Provider Configuration
# ========================================
# Choose AI provider: groq, openai, or anthropic
AI_PROVIDER=groq

# Groq AI (FREE - 30 req/min)
# Get from: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# OpenAI (Optional - paid)
OPENAI_API_KEY=

# Anthropic Claude (Optional - paid)
ANTHROPIC_API_KEY=

# ========================================
# API Configuration
# ========================================
API_V1_PREFIX=/api/v1

# CORS allowed origins (comma-separated)
# For production, specify your frontend domain
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]