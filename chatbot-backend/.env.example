# Application Settings
APP_NAME=WhatsApp Chatbot
DEBUG=False
LOG_LEVEL=INFO

# Azure Cosmos DB for MongoDB
# Get connection string: az cosmosdb keys list --name <account-name> --resource-group <rg> --type connection-strings
MONGODB_URL=mongodb://<account-name>:<key>@<account-name>.mongo.cosmos.azure.com:10255/?ssl=true&replicaSet=globaldb&retrywrites=false&maxIdleTimeMS=120000&appName=@<account-name>@
MONGODB_DATABASE=whatsapp_chatbot

# Security
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_32_characters_minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password

# Meta WhatsApp Business API
# Get from: https://developers.facebook.com/apps/
META_PHONE_NUMBER_ID=your_phone_number_id
META_ACCESS_TOKEN=your_access_token
META_VERIFY_TOKEN=your_verify_token
META_BUSINESS_ACCOUNT_ID=
META_API_VERSION=v24.0

# Groq AI (Free Tier)
# Get from: https://console.groq.com/keys
AI_PROVIDER=groq
GROQ_API_KEY=your_groq_api_key

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]API_KEY=

# Anthropic Claude (Optional - paid)
ANTHROPIC_API_KEY=

# ========================================
# API Configuration
# ========================================
API_V1_PREFIX=/api/v1

# CORS allowed origins (comma-separated)
# For production, specify your frontend domain
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]